     buttons = buttons.split(",").collect{|b| b.strip } %>
  <%  buttons.each do |button| %>
    <li> <a href="/orders/<%= @order.number %>.pdf?template=invoice" class="button fa fa-print"></a> </li>
  <% end %>
<% end %>  
