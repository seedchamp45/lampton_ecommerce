    <script type="text/javascript">
      $(document).ready(function(){
        
          var page =1;  
          var set_img = 2;

          if ($(window).width() > 768) {
            set_img=4;
          }
          var count_img= $('#slide_highlight li').length;
          var count_page = parseInt(count_img/set_img);

          $('#back_highlight').hide();

          if(count_page <=1){
            $('#next_highlight').hide();
          }
      
          for(var i = set_img+1 ; i <= count_img ; i++){
            $('#hproduct_'+i).hide();
          }

          if(count_img % set_img > 0){
            count_page+=1;
          }

          $('#next_highlight').click(function(e) {
              for(var i = page-(set_img-1) ; i <= page*set_img ; i++){
                $('#hproduct_'+i).hide();
              }
              for(var i = (page*set_img)+1 ; i <= (page+1)*set_img ; i++){
                if(i <=count_img){
                   $('#hproduct_'+i).show();
                }
              }
              page+=1;
              
              if(page ==count_page){
                 $('#next_highlight').hide();
                 $('#back_highlight').show();
              }else{
                 $('#back_highlight').show();
                $('#next_highlight').show();
              }
          });


          $('#back_highlight').click(function(e) {
              //alert("==1 "+page);
              for(var i = page*set_img ; i > (page*set_img) -(set_img)  ; i--){
               //alert(i);
                $('#hproduct_'+i).hide();
              }

              page-=1;
              for(var i = (page*set_img)-(set_img-1) ; i <= page*set_img ; i++){
                $('#hproduct_'+i).show();
              }

              if(page == 1){
                $('#next_highlight').show();
                $('#back_highlight').hide();
              }else{
                $('#back_highlight').show();
              }
              
          });
        });
  
   </script>
