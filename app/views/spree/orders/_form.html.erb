                   <%= image_tag("logo_left.png", :alt => "logo", :class => "img-fluid no_padding") %>
                   
                 </div>
               </div>
               <div class="col-md-6 col-xl-6 col-lg-6">
                <div class="cart_title_text cart_title_text_p_b">Delivery Services</div>

                <div>
                  <%= image_tag("logo_right.png", :alt => "logo", :class => "img-fluid no_padding mt-2") %>
                  
                </div>
              </div>
            </div>
          </div>
