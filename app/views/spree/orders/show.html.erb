

<fieldset id="order_summary" data-hook>


  <% if order_just_completed?(@order) %>

  <% end %>

  <div id="order" data-hook>
    <%= render partial: 'spree/shared/order_details', locals: { order: @order } %>

    <br class="clear" />

    <p data-hook="links">
      <a href="/products">
       <%= button_tag 'กลับสู่หน้าแรก',
      class: "continue btn btn-white products_button btn-md products_bu_details orange_bg text_body" %>
      </a>
      <% unless order_just_completed?(@order) %>
        <% if try_spree_current_user && respond_to?(:account_path) %>
          <%= link_to Spree.t(:my_account), spree.account_path, class: "button continue btn btn-white products_button btn-md products_bu_details orange_bg text_body" %>
        <% end %>
      <% end %>
    </p>
  </div>
</fieldset>
