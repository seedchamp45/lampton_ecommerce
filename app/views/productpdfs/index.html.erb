


<h2>Listing documents</h2>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @productpdfs.each do |document| %>
      <tr>
        <td><%= document.filename %></td>
        <td><%= button_to 'Download', document, method: :get %></td>
        <td><%= button_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

