<body>
  <%= render partial: 'header/header' %>
  <% if spree_current_user %>




  <div class="bg_details_products">
    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
          <div class="bg_white1">
            <div class="row">
              <div class="col-12 col-sm-12 col-md-7 col-lg-7 col-xl-12">
