                                          <table class="w-100">
                                            <tr>
                                              <td class="w-50">
                                                <div class="text_body">Order No.</div>
                                              </td>
                                              <td class="w-50">
                                                <div class="text_body"> <input type="text" name="bookId" id="bookId" value=""/></div>
                                              </td>
                                            </tr>
                                            <tr>
                                              <td>
